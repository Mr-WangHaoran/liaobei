<!-- 展示信息 -->
<view class="show-data">
    <view class="avatar"  bindtap="toMyData">
        <view style="flex: 5;display: flex;">
            <view class="avatar_view">
                <image mode="aspectFit" src="{{avatar_url}}"></image>
            </view>
            <view>
                <view style="background-color: wheat;">
                    {{username}}
                </view>
                <view class="gender_view">
                    <image src="{{sex_url}}" style="display: inline-block;"></image>
                    <text style="color: #f40;font-size: 0.7rem;">{{age}}岁</text>
                </view>
            </view>
            <view style="margin-left: 20rpx;"></view>   
            <view>
                <view style="background-color: tomato;color: white;text-align: center;">我的状态</view>
                <view>{{states[index]}}</view>
            </view>
        </view>
        <view style="flex: 1;" class="ziliao" bindtap="toMyData">
            <text>资料＞</text>
        </view>
    </view>
    <view class="data">
        <view class="data1">
            <view>888</view>
            <view>被点赞</view>
        </view>
        <view class="data1">
            <view>99</view>
            <view>关注</view>
        </view>
        <view class="data1">
            <view>122</view>
            <view>粉丝</view>
        </view>
    </view>         
</view>

<!-- 全部功能 -->
<view class="func1">
    <view bindtap="toCircle">
        <mp-icon type="field" icon="transfer-text" color="#00FA9A" size="25"/>
        <text>发表朋友圈</text>
    </view>
    <view bindtap="toSearch">
        <mp-icon type="field" icon="search" color="#ff67a2"/>
        <text>搜索好友</text>
    </view>
</view>

<view class="func1">
    <view bindtap="toPicture">
        <mp-icon type="field" icon="album" color="#67cffe"/>
        <text>相册</text>
    </view>
    <view>
        <mp-icon type="field" icon="mobile-contacts" color="#fac360"/>
        <text>接听设置</text>
    </view>
</view>

<view class="func1">
    <view >
        <mp-icon type="field" icon="delete" color="#a39ef3"/>
        <text>黑名单</text>
    </view>
    <view>
        <mp-icon type="field" icon="group-detail" color="#fe84b6"/>
        <text>圈子</text>
    </view>
</view>

<view class="func1">
    <view>
        <mp-icon type="field" icon="like" color="#f40"/>
        <text>收藏</text>
    </view>
    <view>
        <mp-icon type="field" icon="eyes-on" color="#f44491"/>
        <text>浏览记录</text>
    </view>
    <view bindtap="feedBack">
        <mp-icon type="field" icon="comment" color="#7bb2ef"/>
        <text>反馈意见</text>
    </view>
</view>


