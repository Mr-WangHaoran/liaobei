#user-show{
    border: 1rpx solid #ccc;
    display: flex;
    background-color: yellowgreen;
}
#avatar{
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    border:1rpx solid rgb(155, 153, 153);
    position: relative;
    top:70rpx;
}
.table{
    border: 0px solid darkgray;
    margin-left: 30rpx;
}
.tr{
    display: flex;
    width: 600rpx;
    justify-content: center;
    height: 2.5rem;
    align-items: center;
}
.td{
    width:80%;
    justify-content: center;
    text-align: center;
}
.bg-w{
    background: snow;
}
.bg-g{
    background: #E6F3F9;
}
.th{
    width: 100%;
    justify-content: center;
    background: orange;
    color: #fff;
    display: flex;
    height: 2rem;
    align-items: center;
}
.tips{
    width: 100%;
    text-align: center;
    background-color: orangered;
    color: white;
}
button{
    margin-top:25rpx;
}